.container
  .col-sm-6.col-sm-offset-3
    .well.section
      %h2= t('.title')
      = simple_form_for(resource,
          as: resource_name,
          url: password_path(resource_name),
          html: {class: 'section form-horizontal', method: :put }) do |f|
        = f.error_notification
        = f.input :reset_password_token, as: :hidden
        = f.full_error :reset_password_token
        = f.input :password, label: t('.password'), required: true, autofocus: true
        = f.input :password_confirmation, label: t('.password_confirmation'), required: true


        .form-group
          .col-sm-9.col-sm-offset-3
            = f.button :submit, t('.submit'), class: 'btn btn-primary pull-right'

      = render 'devise/shared/links'
